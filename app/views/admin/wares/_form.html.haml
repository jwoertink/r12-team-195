= simple_form_for([:admin, @ware], :html => {:class => 'form-horizontal', :multipart => true}) do |f|
  = f.input(:kind, :as => :select, :collection => [['Glassware', 'glassware'], ['Hardware', 'hardware']])
  = f.input(:name)
  = f.input(:photo)
  = f.input(:description, :input_html => {:rows => 10})
  
  = f.submit(:class => 'btn btn-info')