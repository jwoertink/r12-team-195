!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Mybestdrink"
    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#{root_path}") My Best Drink
          .container.nav-collapse
            %ul.nav
              %li= link_to "Learn", wares_path
              %li= link_to "Mixologists", users_path
              %li= link_to "Drinks", drinks_path
            %ul.nav.pull-right
              - if current_user.anonymous?
                %li= link_to "Register", new_user_registration_path
                %li= link_to "Sign in", sign_in_path
              -else
                %li.dropdown
                  = link_to("My Account <b class='caret'></b>".html_safe, '', class: 'dropdown-toggle', 'data-toggle' => "dropdown")
                  %ul.dropdown-menu
                    %li= link_to "My Drinks", user_drinks_path
                    %li= link_to "My Profile", user_path(current_user)
                    %li= link_to "Edit My Profile", edit_user_registration_path
                    %li= link_to "Sign out", sign_out_path

    .container
      .content
        .row
          .span12
            = simple_form_for(:drink, url: '/search', method: :get) do |f|
              = f.input(:name, url: autocomplete_drink_name_drinks_path, as: :autocomplete, input_html: { 'data-delimiter' => ',' })
        .row
          .span9
            = bootstrap_flash
            = yield
          .span3
            = render('feeds/feed', events: TimelineEvent.limit(6))

      %footer
        %p &copy; MyBestDrink.com 2012
    = javascript_include_tag "application"
