= simple_form_for([:user, @drink], html: {class: 'form-horizontal', multipart: true}) do |f|
  = f.input :name
  = f.simple_fields_for(:ware) do |w|
    = w.input :ware, label: "Glassware", :collection => Ware.glassware.all(:order => 'name'), :prompt => "Preferred glassware"

  = f.input :description
  = f.input :instructions
  = f.input :photo

  = f.simple_fields_for(:ingredients) do |i|
    = i.input :name

    = i.simple_fields_for(:components) do |i|
      = i.input :amount
      = i.input :unit

  = f.submit submit_tag, class: 'btn'
