%section.box
  %h1= @drink.name

  %p= image_tag(@drink.photo_url) if @drink.photo?
  %p
    Likes
    %span.count.likes= @drink.likes.count
  %p
    Dislikes
    %span.count.dislikes= @drink.dislikes.count

  %ul
    - @drink.ingredients.each do |ingredient|
      %li= ingredient

  = simple_format(@drink.instructions)

  .btn-toolbar
    .btn-group
      = link_to('Like', drink_ratings_path(@drink), class: 'btn', rel: 'rate', 'data-feeling' => 1)
      = link_to('Dislike', drink_ratings_path(@drink), class: 'btn', rel: 'rate', 'data-feeling' => -1)
