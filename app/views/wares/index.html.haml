%section.box
  .ware
    %h1.page-header Learn Mixology

    %h3.sort-actions
      = link_to('All Wares', '#', 'data-value' => 'all')
      \ -
      = @categories.collect { |c| link_to(c.capitalize, '#', 'data-value' => c) }.join(' - ').html_safe

    .row
      %ul#sort-grid.wares
        - @wares.each do |ware|
          %li.ware(data-kind="#{ware.kind}" data-id="id-#{ware.id}")
            = link_to(image_tag(ware.photo_url(:thumb), class: 'ware-photo'), ware) if ware.photo?
            %h5.name= link_to(ware.name, ware)
            %p.meta-data Category: #{ware.kind.capitalize}
